{
  "extends": "tslint-config-standard",
  "rules": {
    "import-name": false,
    "no-increment-decrement": false,
    "variable-name": false,
    "ter-indent": [true, 4, {
        "SwitchCase": 1
    }],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "space-before-function-paren": true,
      "semicolon": [
          true,
          "always"
      ]
  }
}
